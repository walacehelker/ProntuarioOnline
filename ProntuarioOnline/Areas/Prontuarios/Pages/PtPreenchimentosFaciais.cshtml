@page
@model ProntuarioOnline.Areas.Prontuarios.Pages.PtPreenchimentosFaciaisModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Layout = "_Layout";
}

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Procedimentos de Botox</h4>
    <a asp-page="PtPreenchimentosFaciaisCad" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Novo Procedimento
    </a>
  </div>

  @if (Model.Items != null && Model.Items.Any())
  {
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>Paciente</th>
          <th>Data do Procedimento</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model.Items)
        {
          <tr>
            <td>@item.PessoaNome</td>
            <td>@item.DataProcedimento?.ToString("dd/MM/yyyy")</td>
            <td>
              <a asp-page="PtPreenchimentosFaciaisCad" asp-route-id="@item.Id"
                 class="btn btn-sm btn-outline-warning me-1">
                <i class="bi bi-pencil"></i> Editar
              </a>

              @if (item.AssinaturaTermoConsentimento == null || item.AssinaturaTermoConsentimento.Length == 0)
              {
                <a asp-page="AssinarPreenchimentoFacial" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-info me-1">
                  <i class="bi bi-pen"></i> Assinar Termo de Consentimento
                </a>
              }
              else
              {
                <a asp-page="GerarTermoPreenchimentosFaciaisPdf" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-success me-1" target="_blank">
                  <i class="bi bi-file-earmark-pdf"></i> Gerar PDF do Termo
                </a>
              }
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <div class="alert alert-info">Nenhum procedimento de Preenchimento Facial cadastrado.</div>
  }
</div>