@page
@model ProntuarioOnline.Areas.Prontuarios.Pages.PtBotoxModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Layout = "_Layout";
}

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Procedimentos de Botox</h4>
    <a asp-page="PtBotoxCad" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Novo Procedimento
    </a>
  </div>

  @if (Model.Items != null && Model.Items.Any())
  {
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>Paciente</th>
          <th>Data do Procedimento</th>
          <th>Marca do Produto</th>
          <th>Número do Lote</th>
          <th>Data de Validade</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model.Items)
        {
          <tr>
            <td>@item.PessoaNome</td>
            <td>@item.DataProcedimento?.ToString("dd/MM/yyyy")</td>
            <td>@item.MarcaProduto</td>
            <td>@item.NumeroLote</td>
            <td>@(item.DataValidade?.ToString("dd/MM/yyyy") ?? "")</td>
            <td>
              <a asp-page="PtBotoxCad" asp-route-id="@item.Id"
                 class="btn btn-sm btn-outline-warning me-1">
                <i class="bi bi-pencil"></i> Editar
              </a>

              @if (item.PdfAssinado == null || item.PdfAssinado.Length == 0)
              {
                <a asp-page="AssinarBotox" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-info me-1">
                  <i class="bi bi-pen"></i> Assinar PDF
                </a>
              }
              else
              {
                <a asp-page="GerarTermoBotoxPdf" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-success me-1" target="_blank">
                  <i class="bi bi-file-earmark-pdf"></i> Gerar PDF Assinado
                </a>
              }
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <div class="alert alert-info">Nenhum procedimento de Botox cadastrado.</div>
  }
</div>