@page "{id?}"
@model ProntuarioOnline.Areas.Cadastral.Pages.CadPessoas.CadPessoasCad
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 0.3rem;
    }

    .form-control,
    .form-check {
        margin-bottom: 1rem; /* espaço entre campos */
    }

    h5 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
        color: #0d6efd; /* azul bootstrap */
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.3rem;
    }

    .card-body {
        padding: 2rem;
    }

    .form-control {
        padding: 0.6rem 1rem;
        font-size: 1rem;
    }

    .form-check {
        margin-bottom: 0.75rem;
    }

    .btn {
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
    }
</style>

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Cadastro de Pessoa</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <!-- Dados pessoais -->
                <div class="mb-3">
                    <label asp-for="Item.Nome" class="form-label"></label>
                    <input asp-for="Item.Nome" class="form-control" />
                    <span asp-validation-for="Item.Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.NomeSocial" class="form-label"></label>
                    <input asp-for="Item.NomeSocial" class="form-control" />
                    <span asp-validation-for="Item.NomeSocial" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.DataNascimento" class="form-label"></label>
                    <input asp-for="Item.DataNascimento" id="DataNascimento" type="text" class="form-control" placeholder="" />
                    <span asp-validation-for="Item.DataNascimento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Cpf" class="form-label"></label>
                    <input asp-for="Item.Cpf" class="form-control" />
                    <span asp-validation-for="Item.Cpf" class="text-danger"></span>
                </div>

                <!-- Endereço -->
                <h5 class="mt-4">Endereço</h5>
                <div class="mb-3">
                    <label asp-for="Item.Rua" class="form-label"></label>
                    <input asp-for="Item.Rua" class="form-control" />
                    <span asp-validation-for="Item.Rua" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Numero" class="form-label"></label>
                    <input asp-for="Item.Numero" class="form-control" />
                    <span asp-validation-for="Item.Numero" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Bairro" class="form-label"></label>
                    <input asp-for="Item.Bairro" class="form-control" />
                    <span asp-validation-for="Item.Bairro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Cidade" class="form-label"></label>
                    <input asp-for="Item.Cidade" class="form-control" />
                    <span asp-validation-for="Item.Cidade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Estado" class="form-label"></label>
                    <input asp-for="Item.Estado" class="form-control" />
                    <span asp-validation-for="Item.Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Cep" class="form-label"></label>
                    <input asp-for="Item.Cep" class="form-control" />
                    <span asp-validation-for="Item.Cep" class="text-danger"></span>
                </div>

                <!-- Contato -->
                <h5 class="mt-4">Contato</h5>
                <div class="mb-3">
                    <label asp-for="Item.Telefone" class="form-label"></label>
                    <input asp-for="Item.Telefone" class="form-control" />
                    <span asp-validation-for="Item.Telefone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.Email" class="form-label"></label>
                    <input asp-for="Item.Email" class="form-control" />
                    <span asp-validation-for="Item.Email" class="text-danger"></span>
                </div>

                <!-- Histórico -->
                <h5 class="mt-4">Histórico</h5>
                <div class="mb-3">
                    <label asp-for="Item.Queixa" class="form-label"></label>
                    <textarea asp-for="Item.Queixa" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.DiagnosticoClinico" class="form-label"></label>
                    <textarea asp-for="Item.DiagnosticoClinico" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.AntecedentesPatologicos" class="form-label"></label>
                    <textarea asp-for="Item.AntecedentesPatologicos" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Item.AntecedentesFamiliares" class="form-label"></label>
                    <textarea asp-for="Item.AntecedentesFamiliares" class="form-control"></textarea>
                </div>

                <!-- Tratamentos Estéticos -->
                <h5 class="mt-4">Tratamentos Estéticos</h5>

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.PossuiTratamentoEsteticoAnterior"
                           value="true" class="form-check-input" id="tratamentoSim"
                           onchange="toggleTratamentoEstetico()" />
                    <label class="form-check-label" for="tratamentoSim">Sim</label>
                </div>

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.PossuiTratamentoEsteticoAnterior"
                           value="false" class="form-check-input" id="tratamentoNao"
                           onchange="toggleTratamentoEstetico()" />
                    <label class="form-check-label" for="tratamentoNao">Não</label>
                </div>

                <!-- Campos relacionados -->
                <div id="camposTratamentoEstetico" style="display:none;">
                    <div class="form-check mt-3">
                        <input asp-for="Item.ToxinixaBotulinica" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.ToxinixaBotulinica" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Preenchedores" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Preenchedores" class="form-check-label"></label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Item.TratamentoEsteticoAnterior" class="form-label"></label>
                        <textarea asp-for="Item.TratamentoEsteticoAnterior" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Item.InformacoesSobreAplicacao" class="form-label"></label>
                        <textarea asp-for="Item.InformacoesSobreAplicacao" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Item.InformacoesPosAplicacao" class="form-label"></label>
                        <textarea asp-for="Item.InformacoesPosAplicacao" class="form-control"></textarea>
                    </div>
                </div>

                <!-- Medicamentos -->
                <h5 class="mt-4">Medicamentos</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.Medicamentos"
                           value="true" class="form-check-input" id="medicamentosSim"
                           onchange="toggleMedicamentos()" />
                    <label class="form-check-label" for="medicamentosSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.Medicamentos"
                           value="false" class="form-check-input" id="medicamentosNao"
                           onchange="toggleMedicamentos()" />
                    <label class="form-check-label" for="medicamentosNao">Não</label>
                </div>

                <!-- Campos relacionados -->
                <div id="camposMedicamentos" style="display:none;">
                    <div class="form-check mt-3">
                        <input asp-for="Item.Medicamentos" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Medicamentos" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.AntiInfamatorio" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.AntiInfamatorio" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Analgesico" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Analgesico" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.RelaxanteMuscular" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.RelaxanteMuscular" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Antibiotico" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Antibiotico" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Aminoglicosideos" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Aminoglicosideos" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Penicilaminas" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Penicilaminas" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Quinolonas" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Quinolonas" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.RepositoresHormonais" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.RepositoresHormonais" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.Succinilcolina" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.Succinilcolina" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Item.BloqueadorCanalCalcio" class="form-check-input" type="checkbox" />
                        <label asp-for="Item.BloqueadorCanalCalcio" class="form-check-label"></label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Item.OutrosMedicamentos" class="form-label"></label>
                        <textarea asp-for="Item.OutrosMedicamentos" class="form-control"></textarea>
                    </div>
                </div>

                <!-- Hábitos e Condições -->
                <h5 class="mt-4">Hábitos e Condições</h5>
                <div class="form-check">
                    <input asp-for="Item.TomaSol" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.TomaSol" class="form-check-label"></label>
                </div>

                <h5 class="mt-4">Pratica de Esportes</h5>
                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.PraticaEsporte"
                           value="true" class="form-check-input" id="praticaEsporteSim"
                           onchange="togglePraticaEsporte()" />
                    <label class="form-check-label" for="praticaEsporteSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.PraticaEsporte"
                           value="false" class="form-check-input" id="praticaEsporteNao"
                           onchange="togglePraticaEsporte()" />
                    <label class="form-check-label" for="praticaEsporteNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoEsportes" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.Esportes" class="form-label"></label>
                        <textarea asp-for="Item.Esportes" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Antecedentes Alérgicos</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.AntecedentesAlergicos"
                           value="true" class="form-check-input" id="alergicosSim"
                           onchange="toggleAlergicos()" />
                    <label class="form-check-label" for="alergicosSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.AntecedentesAlergicos"
                           value="false" class="form-check-input" id="alergicosNao"
                           onchange="toggleAlergicos()" />
                    <label class="form-check-label" for="alergicosNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoAlergias" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.Alergias" class="form-label"></label>
                        <textarea asp-for="Item.Alergias" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Distúbios Emocionais</h5>

                <div class="form-check">
                    <input asp-for="Item.Stresse" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.Stresse" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Item.Ansiedade" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.Ansiedade" class="form-check-label"></label>
                </div>
                <div class="mb-3">
                    <label asp-for="Item.OutrosDisturbiosEmocionais" class="form-label"></label>
                    <textarea asp-for="Item.OutrosDisturbiosEmocionais" class="form-control"></textarea>
                </div>

                <h5 class="mt-4">Tratamento Ortomolecular</h5>
              
                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.TratamentoOrtomolecular"
                           value="true" class="form-check-input" id="ortomolecularSim"
                           onchange="toggleOrtomolecular()" />
                    <label class="form-check-label" for="ortomolecularSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.TratamentoOrtomolecular"
                           value="false" class="form-check-input" id="ortomolecularNao"
                           onchange="toggleOrtomolecular()" />
                    <label class="form-check-label" for="ortomolecularNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoOrtomolecular" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.DescricaoTratamentosortomolecular" class="form-label"></label>
                        <textarea asp-for="Item.DescricaoTratamentosortomolecular" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Cuidados Estéticos</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.CuidadosEstéticos"
                           value="true" class="form-check-input" id="cuidadosEsteticosSim"
                           onchange="toggleCuidadosEsteticos()" />
                    <label class="form-check-label" for="cuidadosEsteticosSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.CuidadosEstéticos"
                           value="false" class="form-check-input" id="cuidadosEsteticosNao"
                           onchange="toggleCuidadosEsteticos()" />
                    <label class="form-check-label" for="cuidadosEsteticosNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoCuidadosEsteticos" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.DescricaoCuidadosEsteticos" class="form-label"></label>
                        <textarea asp-for="Item.DescricaoCuidadosEsteticos" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Tratamento Médico</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.TratamentoMedico"
                           value="true" class="form-check-input" id="tratamentoMedicoSim"
                           onchange="toggleTratamentoMedico()" />
                    <label class="form-check-label" for="tratamentoMedicoSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.TratamentoMedico"
                           value="false" class="form-check-input" id="tratamentoMedicoNao"
                           onchange="toggleTratamentoMedico()" />
                    <label class="form-check-label" for="tratamentoMedicoNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoTratamentoMedico" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.DescricaoTratamentoMedico" class="form-label"></label>
                        <textarea asp-for="Item.DescricaoTratamentoMedico" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Uso de Ácido na Pele</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.UsoAcidoPele"
                           value="true" class="form-check-input" id="usoAcidoSim"
                           onchange="toggleUsoAcido()" />
                    <label class="form-check-label" for="usoAcidoSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.UsoAcidoPele"
                           value="false" class="form-check-input" id="usoAcidoNao"
                           onchange="toggleUsoAcido()" />
                    <label class="form-check-label" for="usoAcidoNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoUsoAcido" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.QualAcido" class="form-label"></label>
                        <textarea asp-for="Item.QualAcido" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Problema Cardíaco</h5>

                <!-- Sim / Não -->
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.ProblemaCardiaco"
                           value="true" class="form-check-input" id="problemaCardiacoSim"
                           onchange="toggleProblemaCardiaco()" />
                    <label class="form-check-label" for="problemaCardiacoSim">Sim</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Item.ProblemaCardiaco"
                           value="false" class="form-check-input" id="problemaCardiacoNao"
                           onchange="toggleProblemaCardiaco()" />
                    <label class="form-check-label" for="problemaCardiacoNao">Não</label>
                </div>

                <!-- Campo relacionado -->
                <div id="campoProblemaCardiaco" style="display:none;" class="mt-3">
                    <div class="mb-3">
                        <label asp-for="Item.QualProblemaCardiaco" class="form-label"></label>
                        <textarea asp-for="Item.QualProblemaCardiaco" class="form-control"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Geral</h5>

                <div class="form-check">
                    <input asp-for="Item.IntoleranciaLactose" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.IntoleranciaLactose" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Item.Diabetes" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.Diabetes" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Item.AlergiaOvo" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.AlergiaOvo" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Item.Fumante" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.Fumante" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Item.GestanteOuAmamentando" class="form-check-input" type="checkbox" />
                    <label asp-for="Item.GestanteOuAmamentando" class="form-check-label"></label>
                </div>
                <div class="mb-3">
                    <label asp-for="Item.InformacoesComplementares" class="form-label"></label>
                    <textarea asp-for="Item.InformacoesComplementares" class="form-control"></textarea>
                </div>

                <!-- Botões -->
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Salvar
                </button>
                <a asp-page="CadPessoas" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>
</div>

