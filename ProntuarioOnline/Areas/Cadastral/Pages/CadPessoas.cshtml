@page
@using ProntuarioOnline.Areas.Cadastral.Pages.CadPessoas
@model CadPessoas
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Layout = "_Layout";
}

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Pessoas Cadastradas</h4>
    <a asp-page="CadPessoasCad" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Nova Pessoa
    </a>
  </div>

  @if (Model.Items != null && Model.Items.Any())
  {
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Nome Social</th>
                    <th>Data de Nascimento</th>
                    <th>CPF</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pessoa in Model.Items)
                {
                    <tr>
                        <td>@pessoa.Nome</td>
                        <td>@pessoa.NomeSocial</td>
                        <td>@(pessoa.DataNascimento?.ToString("dd/MM/yyyy") ?? "")</td>
                        <td>@pessoa.Cpf</td>
                        <td>
                            <a asp-page="CadPessoasCad" asp-route-id="@pessoa.Id"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
  }
  else
  {
    <div class="alert alert-info">Nenhuma pessoa cadastrada.</div>
  }
</div>