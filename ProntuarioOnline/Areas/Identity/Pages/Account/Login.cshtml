@page
@model LoginModel

@{
  Layout = "_LayoutLogin";
  ViewData["Title"] = "Entrar";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
  <div class="col-md-4">
    <section>
      <form id="account" method="post">
        <h2>Use uma conta local para entrar.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
          <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
          <label asp-for="Input.Email" class="form-label">E-mail</label>
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="senha" />
          <label asp-for="Input.Password" class="form-label">Senha</label>
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3">
          <label asp-for="Input.RememberMe" class="form-label">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            Lembrar-me
          </label>
        </div>
        <div>
          <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
        </div>
        <div>
          <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
          </p>
          <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar-se como um novo usuário</a>
          </p>
          <p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação de e-mail</a>
          </p>
        </div>
      </form>
    </section>
  </div>
  <div class="col-md-6 col-md-offset-2">
    <section>
      <h3>Use outro serviço para entrar.</h3>
      <hr />
      @{
        if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
          <div>
            <p>
              Nenhum serviço de autenticação externa foi configurado. Veja este <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                artigo
                sobre como configurar este aplicativo ASP.NET para permitir login via serviços externos
              </a>.
            </p>
          </div>
        }
        else
        {
          <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div>
              <p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                  <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Entrar usando sua conta @provider.DisplayName">@provider.DisplayName</button>
                }
              </p>
            </div>
          </form>
        }
      }
    </section>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}